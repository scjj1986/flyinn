@model List<Flyinn.Models.Complementos>

<style>
    body {
        font-family: "Lucida Sans Unicode", "Lucida Grande", Sans-Serif;
        font-size: 14px;
    }

    h1 {
        margin-top: 25px;
        text-align: center;
        font-size: 20px;
    }

    h2 {
        margin-top: 25px;
        text-align: center;
    }

    h3 {
        margin-top: 25px;
        text-align: center;
    }

    h4 {
        margin-top: 25px;
    }

    div {
        margin-left: 2em;
    }

    table {
        margin: 20px;
        width: 100%;
        text-align: left;
        border-collapse: collapse;
    }

    th {
        font-size: 12px;
        font-weight: normal;
        /* background: #b9c9fe;*/
        /*background: #e8edff;*/
        /* border-top: 1px solid #aabcfe;*/
        border-bottom: 1px solid #fff;
        border-top: 1px solid transparent;
        /* border-bottom: 1px solid #fff;*/
        height: 20px;
    }

    td {
        font-size: 12px;
        font-weight: normal;
        height: 20px;
        /*background: #e8edff;*/
        border-bottom: 1px solid #fff;
        border-top: 1px solid transparent;
    }



    .foto img {
        border: 2px solid #08088A;
    }
</style>

<p><h1>Reporte de Complementos</h1></p>
<font style="text-align:left;" size="2"><b>Fechas:</b> Desde el @Convert.ToString(@Model[0].FechaInicio).Substring(0, 10) hasta el @Convert.ToString(@Model[0].FechaFin).Substring(0, 10)</font><br />


<table class="table table-striped table-bordered" id="example">
    <thead>
        <tr>
            <th style="background: #e8edff; font-size:x-small" class="center"><strong>&nbsp;&nbsp;&nbsp;&nbsp;</strong></th>
            <th style="background: #e8edff; font-size:x-small" class="center"><strong>Nro Contrato</strong></th>
            <th style="background: #e8edff; font-size:x-small" class="center"><strong>Fecha Procesable</strong></th>
            <th style="background: #e8edff; font-size:x-small" class="center"><strong>Comisión Coordinador Bs.</strong></th>
            <th style="background: #e8edff; font-size:x-small" class="center"><strong>Porcentaje</strong></th>
        </tr>
    </thead>

    <tbody>
        
        @if (Model != null)
        {

            int i = 1;
            var colorfila = "";
            foreach (var datos in Model)
            {
                colorfila = (i % 2 == 0 ? "#e8edff" : "white");

                <tr>
                    <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center"><strong>@Convert.ToInt32(i).</strong></div></td>
                    <td style="font-weight: bolder; background: @colorfila; font-size: x-small" class="center col-xs-1">@datos.NroContrato</td>
                    <td style="font-weight: bolder; background: @colorfila; font-size: x-small" class="center">@datos.Fecha.ToShortDateString()</td>
                    <td style="font-weight: bolder; background: @colorfila; font-size: x-small" class="center">@String.Format("{0:N}", decimal.Parse(String.Format("{0:0.00}", @datos.comisionCoordinador)))</td>
                    <td style="font-weight: bolder; background: @colorfila; font-size: x-small" class="center">@String.Format("{0:N}", decimal.Parse(String.Format("{0:0.00}", @datos.PorcCoordinador)))</td>

                </tr>

                i++;
            }
        }
    </tbody>

</table>

