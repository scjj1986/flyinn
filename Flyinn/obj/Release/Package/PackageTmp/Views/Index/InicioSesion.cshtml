@model Flyinn.Models.Login
@using (Html.BeginForm("InicioSesion", "Index", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <link href="~/Content/EstiloLogin/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/EstiloLogin/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/EstiloLogin/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/EstiloLogin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/EstiloLogin/css/estilo.css" rel="stylesheet" />
    <link href="~/Content/EstiloLogin/css/EstiloLogin.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/script.js"></script>

    <div class="container" style="margin-top:40px">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong> Inicio de Sesión</strong>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="#" method="POST">
                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <img class="profile-img" src="~/Content/EstiloLogin/images/LOGOSUNSOLHOTELES.png" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="editor-field" style="text-align:center">

                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-user"></i>
                                                    </span>

                                                    <input class="form-control" placeholder="Usuario" name="usuario" type="text" autofocus required title="Campo Usuario Vacio" />

                                                </div>
                                                @Html.ValidationMessageFor(user => user.usuario)
                                            </div>
                                        </div>
                                        <div class="form-group" style="text-align:center">
                                            <div class="editor-field">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        <i class="glyphicon glyphicon-lock"></i>
                                                    </span>
                                                    <input class="form-control" placeholder="Contraseña" name="clave" required title="Campo Contraseña vacio" type="password" value="">
                                                </div>
                                                @Html.ValidationMessageFor(user => user.clave)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Entrar">
                                        </div>                                        
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="panel-footer">

                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                        {

                            <div style="text-align:center;color:red">@ViewBag.Error</div>

                        }

                        @*	Don't have an account! <a href="#" onClick=""> Sign Up Here </a>*@
                    </div>

                </div>
            </div>
        </div>
    </div>




}