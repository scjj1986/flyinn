@{ 
    var cadena = "";
    double MontoTotal = 0.00;


    if (@Model[0].Pend == "Pending")
    {
        cadena ="Pending,";
    }
    if (@Model[0].Proc == "Procesable")
    {
        cadena += "Procesable,";
    }
    if (@Model[0].Anul == "Anulado")
    {
        cadena +="Anulado,";
    }

    cadena = cadena.Remove(cadena.Length - 1);
    
}


@*<div>
        <img src="~/Content/EstiloLogin/images/LOGO%20SUNSOL%20HOTELES.png" />

    </div>*@
<p><h1>Reporte Programa Volumen Flyinn</h1></p>
<font style="text-align:left;" size="3"><b>Fechas:</b> Desde el @Convert.ToString(@Model[0].fechaInicio).Substring(0, 10) hasta el @Convert.ToString(@Model[0].fechaFin).Substring(0, 10)</font><br />
<font style="text-align:left;" size="3"><b>Estatus:</b> @cadena</font><br />


@{
    
    cadena = "";


    if (@Model[0].codOfiCoche == 1)
    {
        cadena = "Coche,";
    } 
    
    if (@Model[0].codOfiCosta == 4)
    {
        cadena += "Costa Azul,";
    }
    if (@Model[0].codOfiPlaya == 2)
    {
        cadena +="Playa El Agua,";
    }
    if (@Model[0].codOfiIsla == 3)
    {
        cadena +="Isla Caribe,";
    }
    if (@Model[0].codOfiSala5 == 5)
    {
        cadena += "Sala 05,";
    }

    if (@Model[0].codOfiSala7 == 7)
    {
        cadena += "Sala 07,";
    }

    cadena = cadena.Remove(cadena.Length - 1);
    
    
    
}

<font style="text-align:left;" size="3"><b>Oficina(s): </b>@cadena</font><br />



<img src="/Flyinn/Content/EstiloLogin/images/LOGOSUNSOLHOTELES.png" />
<div class="container">
    <table class="table table-striped table-bordered" id="example-VPF">
        <thead>
            <tr>
                <th style="background: #e8edff; font-size:x-small" class="center"><strong>&nbsp;&nbsp;&nbsp;&nbsp;</strong></th>
                <th style="background: #e8edff; font-size:x-small" width="46px" class="center"><strong>N. Contrato</strong></th>
                <th style="background: #e8edff; font-size:x-small" width="50px" class="center"><strong>Ced. Cliente</strong></th>
                <th style="background: #e8edff; font-size:x-small" width="160px" class="center"><strong>Nombre</strong></th>
                <th style="background: #e8edff; font-size:x-small" width="65px" class="center col-xs-1"><strong>Monto Contrato</strong></th>
                <th style="background: #e8edff; font-size: x-small" width="50px" class="center col-xs-1"><strong>F. Creación</strong></th>
                <th style="background: #e8edff; font-size: x-small" class="center col-xs-1"><strong>Estado</strong></th>
                <th style="background: #e8edff; font-size: x-small" class="center col-xs-1"><strong>Estatus</strong></th>
                <th style="background: #e8edff; font-size: x-small" width="55px" class="center col-xs-1"><strong>F. Proc.</strong></th>
                <th style="background: #e8edff; font-size: x-small" class="center"><strong>Descrip.</strong></th>

            </tr>
        </thead>
        <tbody>

            @if (@Model != null)
            {
                //String fch="";
                //String fch2 = "";
                var colorfila = "";
                for (int i = 0; i < @Model.Count; i++)
                {

                    colorfila = (i % 2 != 0 ? "#e8edff" : "white");
                    
                    <tr>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center"><strong>@Convert.ToInt32(i + 1).</strong></div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center">@Model[i].nrocontrato</div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center">@Model[i].cedula_rif</div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center">@Model[i].nombre</div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center">@String.Format("{0:N}", (decimal.Parse(@Model[i].montocontrato))) Bs.</div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center"> @Convert.ToString(@Model[i].fechacreacion).Substring(0, 10)</div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center">@Model[i].estado</div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center">@Model[i].estatus.Substring(0, 4).</div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center">@Convert.ToString(@Model[i].fechaprocesable).Substring(0, 10)</div></td>
                            <td style="font-weight: bolder; background: @colorfila; font-size: x-small"><div align="center">@Model[i].descripcion</div></td>
                    </tr>

                    MontoTotal = MontoTotal + Convert.ToDouble(Model[i].montocontrato);


                }



            }
        </tbody>
</table>
</div>

<p><b>Monto Total: </b>@String.Format("{0:N}", decimal.Parse(Convert.ToString(MontoTotal))) Bs.</p>
